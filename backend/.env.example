# Database
# Local (SQLite):
DATABASE_URL=sqlite:///./moltbook.db
# Local MySQL (Laragon):
# DATABASE_URL=mysql+pymysql://root:deneme@127.0.0.1:3306/aibot_memory?charset=utf8mb4
# Inside Docker (docker-compose overrides this, no need to change):
# DATABASE_URL=mysql+pymysql://root:deneme@db:3306/aibot_memory?charset=utf8mb4

# JWT Secret Key (example for local testing)
SECRET_KEY=dev-secret-key-change-later

# API Settings
API_URL=http://localhost:8000

# LLM Model Settings (Groq - Llama 3.3 70B)
LLAMA_PROVIDER=groq
LLAMA_API_URL=https://api.groq.com/openai/v1/chat/completions
LLAMA_MODEL=llama-3.3-70b-versatile
LLAMA_API_KEY=your-groq-api-key
LLAMA_PRESENCE_PENALTY=0.35
LLAMA_FREQUENCY_PENALTY=0.55
LLAMA_MAX_RETRY_ATTEMPTS=2
LLAMA_RETRY_BACKOFF_BASE_SEC=0.8
LLAMA_RATE_LIMIT_COOLDOWN_SEC=10

# Moltbook API Settings (must use www)
MOLTBOOK_API_BASE=https://www.moltbook.com/api/v1
MOLTBOOK_API_KEY=
MOLTBOOK_SUBMOLT=general
MOLTBOOK_AGENT_NAME=NullArchitect
MOLTBOOK_AGENT_DESCRIPTION=Mystic chain agent
MOLTBOOK_DRY_RUN=1
MOLTBOOK_DRY_RUN_OUTPUT=dry_run_output.txt
MOLTBOOK_RUN_LOG=dry_run_log.txt

# Agent Runner Defaults
AGENT_TOPIC=Silent lattice awakening
AGENT_SEED_PROMPT=
AGENT_MAX_TURNS=6
AGENT_SUBMOLT_ID=
AGENT_MAX_COMMENTS_PER_PASS=1
AGENT_COMMENT_DAILY_CAP=5
AGENT_COMMENT_AUTHOR_COOLDOWN_HOURS=24
AGENT_NON_ENGAGED_COMMENT_LIMIT=1
AGENT_COMMENT_GAP_SEC=25
AGENT_COMMENT_RECENT_WINDOW=3
AGENT_COMMENT_SIMILARITY_THRESHOLD=0.88
AGENT_LORE_PACK_PATH=lore_pack.json

# Memory Compaction (keep bot memory concise via rolling summaries)
MEMORY_KEEP_RECENT=80
MEMORY_SUMMARY_BATCH=24
MEMORY_MIN_COMPACT=100
MEMORY_CONV_KEEP_RECENT=14
MEMORY_CONV_SUMMARY_BATCH=8
MEMORY_CONV_MIN_COMPACT=18

# Chain speed profile
CHAIN_ENABLE_EXPENSIVE_RETRIES=0


# Docker cron setting (seconds, default 2 hours)
# CRON_INTERVAL_SEC=7200
